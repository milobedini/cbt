{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "strict": true
  },
  "include": ["*.ts"]
}
